{
  "name": "@little-samo/samo-ai-repository-storage",
  "version": "0.0.7",
  "description": "File system-based repository implementations for SamoAI",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/little-samo/SamoAI-Repository-Storage.git"
  },
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": ">=22.0.0"
  },
  "main": "dist/index.js",
